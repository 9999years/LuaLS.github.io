---
import ExternalLink from "../common/ExternalLink.astro";
import Icon from "../common/Icon.astro";
import Tooltip from "../common/Tooltip.astro";
export interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<header class={className}>
  <nav>
    <a href="/" class="home">
      <Tooltip text="Home">
        <Icon name="house" group="solid" />
      </Tooltip>
    </a>
    <div>
      <a href="/wiki">
        <Tooltip text="Wiki">
          <Icon name="book" group="solid" />
        </Tooltip>
      </a>
    </div>
    <span class="github">
      <ExternalLink
        url="https://github.com/luals/lua-language-server"
        noIcon={true}
      >
        <Icon name="github" group="brands" />
      </ExternalLink>
    </span>
  </nav>
</header>

<style lang="scss">
  :global(html) {
    scroll-padding-top: 3.5em;
  }

  header {
    position: fixed;
    top: 0px;
    font-size: 1.3em;
    background-color: #0f2e4b;
    width: 100%;
    height: 2em;
    padding: 0.5rem 1rem;
    z-index: 20;

    nav {
      width: 100%;
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      align-items: center;

      & > div {
        width: 100%;
        display: inline-flex;
        justify-content: center;
        margin: auto;
      }

      a,
      a.external {
        color: white;
        text-decoration: none;
      }

      .github {
        width: fit-content;
        margin: 0px 2rem 0px auto;
        font-size: 1.2em;
      }
    }
  }
</style>
